class Solution:
    def minimumIndex(self, nums: List[int]) -> int:
        count_nums = Counter(nums)
        max_freq = 0
        freq_num = 0
        n = len(nums)
        for num in count_nums:
            if count_nums[num] >= max_freq:
                max_freq = count_nums[num]
                freq_num = num
        
        curr_occr = 0
        result = -1
        for i in range(len(nums)):
            if i == len(nums) - 1:
                break

            if nums[i] == freq_num:
                curr_occr += 1
            if curr_occr > ((i+1) // 2) and (n - i - 1) // 2 < max_freq - curr_occr:
                result = i
                break
        
        return result

